<%= form_with(model: fanfic, local: true, html: {multipart: true}) do |form| %>
  <% if fanfic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(fanfic.errors.count, "error") %> prohibited this fanfic from being saved:</h2>

      <ul>
        <% fanfic.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <h4> <%= form.label :title %> </h4>
    <%= form.text_field(:title, {:class => 'form-control'}) %>
  </div>

  <div class="field">
    <h4> <%= form.label :body %> </h4>
    <%= form.trix_editor(:body, {:class => 'form-control'}) %>
  </div>

<!--  <div class="field">-->
    <%#= form.file_field :avatar %>
<!--  </div>-->

  <div class="field">
    <h4> <%= form.label :all_tags %> </h4>
    <%= form.text_field(:all_tags, {:class => 'form-control'}) %>
  </div>

  <div class="field">
    <h4> <%= form.label :genre_id %> </h4>
    <%= form.collection_select :genre_id, Genre.order(:name), :id, :name, { include_blank: true} %>
  </div>

  <div class="actions">
    <%= form.submit({:class => 'btn btn-success'}) %>
  </div>
<% end %>
