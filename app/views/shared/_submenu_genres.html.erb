<ul class="nav nav-pills nav-stacked nested_nav">
  <% genres.each do |genre, children| %>
    <li>
      <%= link_to genre.name, genre, class: "nav-link #{'active' if current_page?(genre_path(genre))}" %>
      <%= render 'shared/submenu_genres', genres: children if children.present? %>
    </li>
  <% end %>
</ul>