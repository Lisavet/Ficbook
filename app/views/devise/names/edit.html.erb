<h2>Change your name</h2>

<%= form_for(resource, as: resource_name, url: name_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_name_token %>

  <div class="field">
    <%= f.label :name, "New Name" %><br />
    <% if @minimum_name_length %>
      <em>(<%= @minimum_name_length %> characters minimum)</em><br />
    <% end %>
    <%= f.name_field :name, autofocus: true, autocomplete: "new-name" %>
  </div>

  <div class="field">
    <%= f.label :name_confirmation, "Confirm new name" %><br />
    <%= f.name_field :name_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Change my name" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
